{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "rootDir": "src",
  "module": "ESNext",
    "target": "ES2020",
    "sourceMap": true,
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "src/**/*.vitest.ts", "tests/**/*", "node_modules"]
}
