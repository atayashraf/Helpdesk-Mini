{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "client/dist" } },
    { "src": "server/dist/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/dist/index.js" },
    { "src": "/(.*)", "dest": "/client/dist/$1" }
  ]
}
